<Application
    x:Class="ShoppingList.Desktop.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ShoppingList.Desktop.Converters"
    xmlns:local="clr-namespace:ShoppingList.Desktop">
    <Application.Resources>
        <conv:BoolToCheckedStatusColorConverter x:Key="BoolToCheckedStatusColorConverter" />
        <conv:BoolToCheckedStatusIconConverter x:Key="BoolToCheckedStatusIconConverter" />
        <conv:TextDecorationStrikethroughConverter x:Key="TextDecorationStrikethroughConverter" />

        <Style x:Key="TransaprentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>

        <Style x:Key="TitleLabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="RoyalBlue" />
            <Setter Property="Margin" Value="0,4,8,4" />
        </Style>
        <Style x:Key="DataTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,4,20,4" />
        </Style>
    </Application.Resources>
</Application>
